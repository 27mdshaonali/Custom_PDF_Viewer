<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/coverLayout"
        >

        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:layout_gravity="start"
            android:id="@+id/cover_image"
            tools:ignore="ContentDescription" />

        <TextView
            android:background="#79040303"
        android:layout_marginTop="3dp"
        android:textSize="22sp"
        android:textColor="#FAFAF8"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="Title goes here"
        tools:ignore="HardcodedText" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:layout_below="@id/coverLayout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_marginTop="3dp"
                android:textSize="19sp"
                android:textColor="#20201F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/long_description"
                android:text="Long description goes here"
                android:textIsSelectable="true"
                android:textAlignment="viewStart"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>