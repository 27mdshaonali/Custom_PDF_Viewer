<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/firstNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter first number: "
        android:inputType="numberDecimal"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/lastNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter last number: "
        android:inputType="numberDecimal"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a number: "
        android:inputType="numberDecimal"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/endNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter end number: "
        android:inputType="numberDecimal"
        tools:ignore="Autofill,HardcodedText" />

    <Button
        android:id="@+id/clearTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Clear Text"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/makeTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Make Table"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="#1BFF5722">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Result: "
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>