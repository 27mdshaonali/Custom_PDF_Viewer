<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsNews">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:id="@+id/detailsCover"
        android:elevation="@dimen/_4sdp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/detailsImg"
            android:scaleType="fitXY"
            android:src="@drawable/kali"
            tools:ignore="ContentDescription" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailsTitle"
            android:text="Title"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#70000000"
            tools:ignore="HardcodedText,RtlSymmetry" />



    </RelativeLayout>

    <ScrollView
        android:paddingTop="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/detailsCover"
        android:background="#2D0091EA"
        android:id="@+id/descScroll"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details News"
                android:id="@+id/detailsDescription"
                android:textSize="@dimen/_14ssp"
                android:textColor="#242222"
                tools:ignore="HardcodedText" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>